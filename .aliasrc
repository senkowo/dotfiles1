

# default editor
export EDITOR=nvim

# add to path
export PATH="$HOME/.local/bin:$PATH"
export PATH="$HOME/.cabal/bin:$PATH"

## more exports
#
# makes Quaver run
#export DOTNET_SYSTEM_GLOBALIZATION_INVARIANT=1
# prevents fullscreen from minimizing?
#export SDL_VIDEO_MINIMIZE_ON_FOCUS_LOSS=0

# aliases
alias pluginstall-all="~/.local/bin/pluginstall-all.sh"
alias recompiledwm="cd ~/.config/dwm-*.* && doas make clean install && cd -"
alias recompileslstatus="cd ~/.config/slstatus && doas make clean install && cd -"
alias recompileurxvt='xrdb ~/.Xresources'
alias doom='~/.emacs.d/bin/doom'
#alias ls='ls --color'

# more aliases
alias l='exa'
alias la='exa -a'
alias ll='exa -lah'
alias ls='exa --color=auto'

